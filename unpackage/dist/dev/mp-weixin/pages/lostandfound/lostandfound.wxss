/* 水平间距 */
.content .list {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content .list .left {
  width: 100%;
  height: 100%;
}
.content .list .left image {
  width: 200rpx;
  height: 200rpx;
}
.content .list .middle {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  flex: 3;
}
.content .list .middle .title {
  font-size: 30rpx;
  font-weight: 600;
  width: 300rpx;
}
.content .list .middle .date {
  width: 300rpx;
  color: #bbb;
  font-size: 24rpx;
}
.content .list .middle .desc {
  width: 300rpx;
  color: #000;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.content .list .middle view {
  margin: 5rpx 0;
}
.content .list .right button.btn {
  padding: 0;
  margin-right: 30rpx;
  width: 100rpx;
  height: 55rpx;
  line-height: 55rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 600;
  background-color: #adc0fb;
  border-radius: 6rpx;
}
.content .list .right button.btn::after {
  border: none;
}